
<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", data: {turbo: false}, local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 mb-3 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class:"form-control mb-3 shadow rounded", placeholder: "Choose a username..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 mb-3 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, rows: 10, class:"form-control shadow rounded", placeholder: "Enter Email..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Choose Password..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-light btn-lg d-grid gap-2 col-3 mx-auto mt-4") %>
      </div>

    <% end %>

  </div>
</div>
